{
  "name": "legend-gomoku-enterprise",
  "version": "2.0.0",
  "description": "商业级双人对战五子棋游戏 - 企业版",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint . --ext .js --fix",
    "security-audit": "npm audit --audit-level moderate",
    "build": "npm run lint && npm run test",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "docker:build": "docker build -t legend-gomoku .",
    "docker:run": "docker run -p 3000:3000 legend-gomoku"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "prometheus-client": "^15.0.0",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "@types/jest": "^29.5.8"
  },
  "keywords": ["gomoku", "game", "websocket", "multiplayer", "enterprise", "commercial"],
  "author": "Legend Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
